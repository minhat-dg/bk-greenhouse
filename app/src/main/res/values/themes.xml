<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BKGreenHouse" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second</item>
        <item name="colorSecondaryVariant">@color/second</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="BottomSheetTheme" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="header0">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="header1">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="header2">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="header3">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="header4">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text_box">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="body">
        <item name="fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="body_bold">
        <item name="fontFamily">@font/montserrat_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>